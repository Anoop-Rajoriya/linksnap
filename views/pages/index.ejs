<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body class="container">
    <%- include('../partials/header') %>
    <main>
      <form action="/shorten" method="POST" novalidate>
        <input type="url" name="url" required placeholder="Enter URL here..." />
        <button type="submit">Shorten URL</button>
      </form>

      <% if (success) { %>
      <div class="alert success"><%= success %></div>
      <% } if (error) { %>
      <div class="alert error"><%= error %></div>
      <% } %>

      <ul>
        <% if (urls && urls.length > 0) { urls.forEach(url => { %>
        <li>
          <a href="<%= url.shortUrl %>" target="_blank">
            <%= url.shortUrl %>
          </a>
          <span><%= url.clicks || 0 %> Clicks </span>
          <a href="/analytics/<%= url.shortCode %>">View Analytics</a>
        </li>
        <% }) } else { %>
        <li>No URLs available</li>
        <% } %>
      </ul>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>
