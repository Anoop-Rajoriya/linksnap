<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LinkSnap</title>
    <style>
      body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #121212;
        color: #eaeaea;
      }
      header {
        background-color: #1f1f1f;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      header h1 {
        margin: 0;
        font-size: 1.5rem;
        color: #fff;
      }
      .form-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 1.5rem;
        background: #1c1c1c;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);
      }
      form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      label {
        font-size: 0.9rem;
        margin-bottom: 0.3rem;
      }
      input,
      textarea {
        padding: 0.6rem;
        border: 1px solid #333;
        border-radius: 6px;
        background: #2a2a2a;
        color: #fff;
        width: 100%;
        resize: none;
      }
      input:focus,
      textarea:focus {
        outline: none;
        border-color: #0078ff;
      }
      button {
        padding: 0.8rem;
        border: none;
        border-radius: 6px;
        background: #0078ff;
        color: #fff;
        font-weight: bold;
        cursor: pointer;
      }
      button:hover {
        background: #005fcc;
      }
      .message {
        margin: 1rem 0;
        padding: 0.8rem;
        border-radius: 6px;
        font-size: 0.95rem;
      }
      .success {
        background: #1e4620;
        color: #a8f0b0;
        border: 1px solid #2f7a34;
      }
      .error {
        background: #461e1e;
        color: #f0a8a8;
        border: 1px solid #7a2f2f;
      }
      .cards-container {
        max-width: 1000px;
        margin: 2rem auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        padding: 0 1rem;
      }
      .card {
        background: #1c1c1c;
        padding: 1rem;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);
        transition: transform 0.2s;
      }
      .card:hover {
        transform: translateY(-3px);
      }
      .card h3 {
        margin: 0 0 0.5rem;
        font-size: 1.2rem;
        color: #fff;
      }
      .card p {
        margin: 0.3rem 0;
        font-size: 0.95rem;
        color: #ccc;
      }
      .short-url {
        color: #4da6ff;
        text-decoration: none;
      }
      .short-url:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>LinkSnap | Home</h1>
    </header>

    <!-- URL Shortening Form -->
    <section class="form-container">
      <!-- Success & Error Messages -->
      <% if (success) { %>
      <div class="message success"><%= success %></div>
      <% } %> <% if (error) { %>
      <div class="message error"><%= error %></div>
      <% } %>

      <form action="/shorten" method="POST">
        <div>
          <label for="title">URL Title *</label>
          <input
            type="text"
            id="title"
            name="title"
            placeholder="Enter a title"
          />
        </div>
        <div>
          <label for="url">Long URL *</label>
          <input
            type="url"
            id="url"
            name="url"
            placeholder="https://example.com"
            required
          />
        </div>
        <button type="submit">Shorten URL</button>
      </form>
    </section>

    <!-- URLs Cards -->
    <section class="cards-container">
      <% if (urls && urls.length > 0) { %> <% urls.forEach(url => { %>
      <div class="card">
        <h3><%= url.title || "Untitled" %></h3>
        <p>
          Short URL:
          <a href="<%= url.shortUrl %>" class="short-url"
            ><%= url.shortUrl %></a
          >
        </p>
        <p>
          Expiry: <%= url.expiresAt ? url.expiresAt.toDateString() : "Not set"
          %>
        </p>
        <p>Visits: <%= url.visits %></p>
      </div>
      <% }) %> <% } else { %>
      <p style="text-align: center; color: #777">No URLs generated yet.</p>
      <% } %>
    </section>
  </body>
</html>
