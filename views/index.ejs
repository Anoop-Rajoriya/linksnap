<section class="hero">
  <div class="hero-content">
    <h1>Shorten your links with <span class="highlight">LinkSnap</span></h1>
    <p class="subtitle">
      Paste a long URL below and get a short link instantly.
    </p>

    <form action="/shorten" method="post" class="shorten-form">
      <input type="url" name="url" placeholder="Enter long URL..." required />
      <button type="submit">Shorten</button>
    </form>

    <% if(messages && messages.error){ %>
    <p class="alert error"><%= messages.error %></p>
    <% } else if(messages && messages.success){ %>
    <p class="alert success"><%= messages.success %></p>
    <% } else { %>
    <p class="note">Your shortened links will appear in your dashboard.</p>
    <% } %>
  </div>
</section>

